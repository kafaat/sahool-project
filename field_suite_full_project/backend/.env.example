# Field Suite Backend Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=Field Suite Backend
APP_VERSION=2.1.0
DEBUG=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
# Maximum requests per window
RATE_LIMIT_REQUESTS=100
# Time window in seconds
RATE_LIMIT_WINDOW=60

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Database (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/fieldsuite

# Sentinel API (for NDVI project)
# SENTINEL_USER=your_username
# SENTINEL_PASS=your_password
