# Field Advisor Service Configuration

# Service Settings
SERVICE_NAME=field-advisor-service
SERVICE_VERSION=1.0.0
DEBUG=false

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/field_advisor

# External Services
NDVI_SERVICE_URL=http://localhost:8000
WEATHER_API_URL=https://api.open-meteo.com/v1
WEATHER_API_KEY=

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Advisor Thresholds
NDVI_CRITICAL_THRESHOLD=0.3
NDVI_WARNING_THRESHOLD=0.4
NDVI_HEALTHY_THRESHOLD=0.6
DEFAULT_ANALYSIS_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
