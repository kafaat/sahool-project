# =============================================================================
# SAHOOL Yemen Platform - Production Environment Variables
# منصة سهول اليمن - متغيرات بيئة الإنتاج
# =============================================================================
# IMPORTANT: Generate secure values before deployment!
# هام: قم بتوليد قيم آمنة قبل النشر!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_USER=sahool_production_user
DB_PASS=CHANGE_ME_GENERATE_STRONG_PASSWORD_32_CHARS
DB_NAME=sahool_yemen_db
DB_HOST=fs-postgres
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD_32_CHARS
REDIS_HOST=fs-redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Security & JWT
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=CHANGE_ME_GENERATE_64_CHAR_BASE64_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_64_CHAR_BASE64_SECRET
API_KEY_SECRET=CHANGE_ME_GENERATE_API_KEY

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
SENTINEL_HUB_CLIENT_ID=your-sentinel-hub-client-id
SENTINEL_HUB_CLIENT_SECRET=your-sentinel-hub-client-secret

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_GRAFANA_PASSWORD

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# -----------------------------------------------------------------------------
# TLS/SSL (Optional - handled by deploy script)
# -----------------------------------------------------------------------------
TLS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/sahool/site.crt
TLS_KEY_PATH=/etc/ssl/sahool/site.key

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# -----------------------------------------------------------------------------
# Cache Settings
# -----------------------------------------------------------------------------
CACHE_TTL=300
CACHE_MAX_SIZE=1000
