# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/sahool

# ===================================
# Copernicus Data Space Ecosystem (CDSE) - Satellite Imagery
# Register at: https://dataspace.copernicus.eu/
# ===================================
CDSE_USER=your_cdse_username_here
CDSE_PASS=your_cdse_password_here

# ===================================
# Gateway Configuration
# ===================================
NEXT_PUBLIC_GATEWAY_URL=http://localhost:9000

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9000,http://localhost:8080

# Trusted hosts for security (use * for development only)
TRUSTED_HOSTS=*

# ===================================
# MinIO Object Storage
# ===================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET_IMAGERY=sahool-imagery

# ===================================
# Redis Cache
# ===================================
REDIS_URL=redis://redis:6379/0

# ===================================
# Application Environment
# ===================================
SAHOOL_ENV=local

# ===================================
# IoT Gateway - MQTT Configuration
# ===================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=sahool
MQTT_PASSWORD=your_mqtt_password_here

# ===================================
# Security & Authentication
# ===================================
JWT_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===================================
# Mobile App Configuration
# ===================================
EXPO_PUBLIC_API_URL=http://localhost:9000

# ===================================
# Optional: OpenAI API (for enhanced AI features)
# ===================================
# OPENAI_API_KEY=sk-your-key-here

# ===================================
# Optional: Sentry (for error tracking)
# ===================================
# SENTRY_DSN=https://your-sentry-dsn

# ===================================
# Optional: Email Configuration (for alerts)
# ===================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@sahool.com

# ===================================
# Optional: SMS Configuration (Twilio)
# ===================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# Optional: Blockchain Configuration (Polygon)
# ===================================
# POLYGON_RPC_URL=https://polygon-rpc.com
# BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
# SUPPLY_CHAIN_CONTRACT_ADDRESS=0x...
